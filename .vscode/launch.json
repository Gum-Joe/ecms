{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "nodemon",
			"program": "${workspaceFolder}/packages/@ecms/server/src/server.ts",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "yarn",
			"cwd": "${workspaceFolder}/packages/@ecms/server",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"DEBUG": "knex:tx"
			},
			"runtimeArgs": ["nodemon"],
			"type": "pwa-node",
			"outputCapture": "std",
		}

	]
}